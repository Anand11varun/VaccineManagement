@model IEnumerable<VaccineManagementAPI.Models.Slot>

@{
    ViewBag.Title = "SearchBy";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>SearchBy</h2>

@using (Html.BeginForm("SearchBy", "User", FormMethod.Get))
{
    @Html.TextBox("city")
    <input type="submit" value="city" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoseNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateTime.Date)
        </th> 
        <th>
            @Html.DisplayNameFor(model => model.DateTime.TimeOfDay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Center.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VaccineId)
        </th>
        <th>Confirm Book</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DoseNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime.TimeOfDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Center.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VaccineId)
            </td>
            <td>
                @Html.ActionLink("Book", "Book1", new { id = item.SlotId }) 
            </td>
        </tr>
    }

</table>
